<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>List Example</title>
  <link rel="stylesheet" type="text/css" href="../static/stylesheet.css">
</head>
<body>
  <% include('header') %>

  <!-- Container -->
  <div class="container">
    <h1>Bookings Overview</h1>
    <div class="box">
      <h2>Reserved Dates</h2>
      <% if (dates.length > 0) { %>
        <ul>
          <!-- Loop over de datums -->
          <% dates.forEach(dateObj => { %>
            <li>
              <span>Name: <%= dateObj.dateRange.name %></span>
              <!-- Controleer of het datumbereik een array is -->
              <% if (Array.isArray(dateObj.dateRange.dateRange)) { %>
                <% dateObj.dateRange.dateRange.forEach((date, index) => { %>
                  <!-- Bepaal of het de start of einddatum is -->
                  <% if (index === 0) { %>
                    <span>From: <%= date.slice(0, 10) %></span>
                  <% } else if (index === 1) { %>
                    <span>Until: <%= date.slice(0, 10) %></span>
                  <% } %>
                <% }); %>
              <% } %>
            </li>
          <% }); %>
        </ul>
      <% } else { %>
        <p>No reserved dates found.</p>
      <% } %>
    </div>
  </div>

  <% include('footer') %>
</body>
</html>
